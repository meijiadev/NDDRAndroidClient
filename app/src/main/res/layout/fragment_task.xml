<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#101112">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center"
        android:text="@string/task_title"
        android:textColor="#eaf1f5"
        android:textSize="14sp"
        android:background="#161718"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="9sp"
        android:autoSizeMaxTextSize="14sp"/>
    <TextView
        android:layout_width="90dp"
        android:layout_height="32dp"
        android:background="@drawable/bt_bg__map"
        android:text="@string/save_task"
        android:textSize="10sp"
        android:textColor="#ccffffff"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:layout_marginTop="6dp"
        android:layout_marginRight="24dp"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="7sp"
        android:autoSizeMaxTextSize="10sp"
        android:id="@+id/tv_task_save"
        />
    <TextView
        android:id="@+id/tv_create_task"
        android:layout_width="90dp"
        android:layout_height="32dp"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="5dp"
        android:text="@string/new_create_task"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:autoSizeTextType="uniform"
        android:autoSizeMaxTextSize="12sp"
        android:autoSizeMinTextSize="9sp"
        android:gravity="center"
        android:background="@drawable/bt_bg__map"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="44dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginRight="20dp">

            <TextView
                android:layout_width="60dp"
                android:layout_height="18dp"
                android:layout_marginLeft="31dp"
                android:id="@+id/tv_task_name1"
                android:textSize="12sp"
                android:textColor="#eaf1f5"
                android:text="@string/task_name"
                android:autoSizeMinTextSize="9sp"
                android:autoSizeMaxTextSize="12sp"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                android:layout_centerVertical="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:background="#161718"
                android:layout_toRightOf="@+id/tv_task_name1"
                android:id="@+id/tv_run_time1"
                android:layout_marginLeft="117.5dp"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="@string/execute_time"
                android:textSize="12sp"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="12sp"
                android:autoSizeMinTextSize="9sp"
                android:textColor="#eaf1f5"
                />
            <TextView
                android:layout_width="60dp"
                android:layout_height="18dp"
                android:layout_toRightOf="@id/tv_run_time1"
                android:layout_marginLeft="289dp"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:textSize="12sp"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="9sp"
                android:autoSizeMaxTextSize="@dimen/text_size_12sp"
                android:textColor="#eaf1f5"
                android:text="@string/task_status"
                android:id="@+id/tv_task_status"/>
            <TextView
                android:layout_width="60dp"
                android:layout_height="18dp"
                android:layout_toRightOf="@id/tv_task_status"
                android:layout_marginLeft="89dp"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:textSize="12sp"
                android:autoSizeMaxTextSize="@dimen/text_size_12sp"
                android:autoSizeMinTextSize="9sp"
                android:autoSizeTextType="uniform"
                android:textColor="#eaf1f5"
                android:text="@string/operator_task"/>

        </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recycle_task_list"
        android:layout_marginTop="83dp"
        android:layout_marginRight="20dp"/>
    </RelativeLayout>


</RelativeLayout>