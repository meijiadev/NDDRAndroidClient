<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#101112">
    <RelativeLayout
        android:layout_width="116dp"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#262728"
            android:layout_marginLeft="113dp"
            />
        <ddr.example.com.nddrandroidclient.widget.textview.LineTextView
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:text="@string/navigation_para"
            android:textSize="12sp"
            android:layout_centerHorizontal="true"
            android:id="@+id/tv_naParam"
            android:textColor="#99ffffff"
            android:gravity="center"
            android:layout_marginTop="60dp"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="6sp"
            android:autoSizeMaxTextSize="12sp"
            />
        <ddr.example.com.nddrandroidclient.widget.textview.LineTextView
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:text="@string/auto_charging"
            android:textSize="12sp"
            android:layout_centerHorizontal="true"
            android:layout_alignTop="@id/tv_naParam"
            android:layout_marginTop="55dp"
            android:textColor="#99ffffff"
            android:gravity="center"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="9sp"
            android:autoSizeMaxTextSize="12sp"
            android:id="@+id/tv_autoCharging"/>
        <ddr.example.com.nddrandroidclient.widget.textview.LineTextView
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:text="@string/sensor_set"
            android:textSize="12sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            android:textColor="#99ffffff"
            android:gravity="center"
            android:layout_alignTop="@id/tv_autoCharging"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="9sp"
            android:autoSizeMaxTextSize="12sp"
            android:id="@+id/tv_sensorSet"
            />
        <ddr.example.com.nddrandroidclient.widget.textview.LineTextView
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:text="@string/hardware_detection"
            android:textSize="12sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            android:textColor="#99ffffff"
            android:gravity="center"
            android:layout_alignTop="@id/tv_sensorSet"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="9sp"
            android:autoSizeMaxTextSize="12sp"
            android:id="@+id/tv_robotTest"
            />
        <ddr.example.com.nddrandroidclient.widget.textview.LineTextView
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:text="@string/about_us"
            android:textSize="12sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            android:textColor="#99ffffff"
            android:gravity="center"
            android:layout_alignTop="@id/tv_robotTest"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="9sp"
            android:autoSizeMaxTextSize="12sp"
            android:id="@+id/tv_editionManager"
        />
        <ddr.example.com.nddrandroidclient.widget.textview.LineTextView
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:text="帮助与反馈"
            android:textSize="12sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            android:textColor="#99ffffff"
            android:gravity="center"
            android:layout_alignTop="@id/tv_editionManager"
            android:id="@+id/tv_helpFeedback"
            android:visibility="gone"
            />
        <ddr.example.com.nddrandroidclient.widget.textview.LineTextView
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:text="语料播报"
            android:textSize="12sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            android:textColor="#99ffffff"
            android:gravity="center"
            android:layout_alignTop="@id/tv_editionManager"
            android:id="@+id/tv_voice"
            android:visibility="gone"
            />

    </RelativeLayout>
    <ddr.example.com.nddrandroidclient.widget.view.DDRViewPager
        android:id="@+id/vp_home_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="116.5dp"
        >
    </ddr.example.com.nddrandroidclient.widget.view.DDRViewPager>

</RelativeLayout>