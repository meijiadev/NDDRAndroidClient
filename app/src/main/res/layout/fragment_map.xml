                android:autoSizeMinTextSize="9sp"
                android:autoSizeMaxTextSize="12sp"
                />

            <TextView
                android:id="@+id/tv_edit_map"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/map_edit"
                android:textSize="@dimen/text_size_12sp"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:drawableLeft="@mipmap/iv_edit_gray"
                android:layout_marginLeft="44dp"
                android:layout_toRightOf="@id/tv_path"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="9sp"
                android:autoSizeMaxTextSize="12sp"
                />
            <TextView
                android:id="@+id/tv_reference"
                android:layout_width="124dp"
                android:layout_height="32dp"
                android:drawableLeft="@mipmap/item_show"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/bt_bg__map"
                android:paddingLeft="20dp"
                android:text="@string/common_reference"
                android:textSize="@dimen/text_size_12sp"
                android:textColor="@color/white"
