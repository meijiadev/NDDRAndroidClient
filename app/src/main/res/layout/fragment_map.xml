        <TextView
            android:id="@+id/bt_create_map"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:minWidth="110dp"
            android:maxWidth="150dp"
            android:background="@drawable/bt_bg__map"
            android:text="@string/new_create_map"
            android:textSize="@dimen/text_size_12sp"
            android:gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            android:textColor="#ccffffff"
            android:drawableLeft="@mipmap/add_map"
            android:paddingLeft="12dp"
            android:drawablePadding="4dp"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="9sp"
            android:autoSizeMaxTextSize="12sp"
            />
        <TextView
            android:id="@+id/bt_batch_delete"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:minWidth="110dp"
            android:background="@drawable/bt_bg__map"
            android:layout_toRightOf="@id/bt_create_map"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="23dp"
            android:text="@string/batch_delete"
            android:textSize="@dimen/text_size_12sp"
            android:gravity="center_vertical"
            android:textColor="#ccffffff"
            android:drawableLeft="@mipmap/iv_batch"
            android:paddingLeft="12dp"
            android:drawablePadding="4dp"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="9sp"
            android:autoSizeMaxTextSize="12sp"
            android:paddingRight="5dp"
            />
        <TextView
            android:id="@+id/tv_back_batch"
            android:layout_width="90dp"
            android:layout_height="32dp"
            android:background="@drawable/bt_bg__map"
            android:layout_marginTop="24dp"
            android:layout_marginRight="23dp"
            android:text="@string/common_exit"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_size_12sp"
            android:textColor="#ccffffff"
            android:drawableLeft="@mipmap/iv_back_batch"
            android:paddingLeft="10dp"
            android:drawablePadding="4dp"
            android:layout_toLeftOf="@id/tv_delete_all"
            android:visibility="gone"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="9sp"
            android:autoSizeMaxTextSize="12sp"
            />
        <TextView
            android:id="@+id/tv_delete_all"
            android:layout_width="90dp"
            android:layout_height="32dp"
            android:background="@drawable/bt_bg__map"
            android:layout_alignParentRight="true"
            android:layout_marginTop="24dp"
            android:layout_marginRight="24dp"
            android:text="@string/common_delete"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_size_12sp"
            android:textColor="#ccffffff"
            android:drawableLeft="@mipmap/iv_delete"
            android:paddingLeft="10dp"
            android:drawablePadding="4dp"
            android:visibility="gone"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="9sp"
            android:autoSizeMaxTextSize="12sp"
            />
