                android:drawablePadding="5dp"
                android:layout_marginRight="17dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="9sp"
                android:autoSizeMaxTextSize="12sp"

                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/left_detail_layout"
