<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.HomeActivity"
    tools:ignore="HardcodedText">

    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#101112">
        <ImageView
            android:id="@+id/iv_menu"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@mipmap/menu"
            android:scaleType="center"
            android:layout_marginLeft="16dp"
            />
        <ddr.example.com.nddrandroidclient.widget.textview.LineTextView
            android:id="@+id/status"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="@string/home_status"
            android:textSize="12sp"
            android:layout_marginLeft="100dp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_toRightOf="@id/iv_menu"
            android:drawableLeft="@mipmap/status_def"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="9sp"
            android:autoSizeMaxTextSize="12sp"
            />
        <ddr.example.com.nddrandroidclient.widget.textview.LineTextView
            android:id="@+id/mapmanager"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginLeft="44dp"
            android:layout_toRightOf="@id/status"
            android:drawableLeft="@mipmap/map_def"
            android:gravity="center"
            android:text="@string/home_map_manager"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="9sp"
            android:autoSizeMaxTextSize="12sp"/>
        <ddr.example.com.nddrandroidclient.widget.textview.LineTextView
            android:id="@+id/taskmanager"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="@string/home_task"
            android:textSize="12sp"
            android:layout_toRightOf="@id/mapmanager"
            android:layout_marginLeft="44dp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:drawableLeft="@mipmap/task_def"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="9sp"
            android:autoSizeMaxTextSize="12sp"/>
        <ddr.example.com.nddrandroidclient.widget.textview.LineTextView
            android:id="@+id/highset"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="@string/home_setting"
            android:textSize="12sp"
            android:layout_toRightOf="@id/taskmanager"
            android:layout_centerInParent="true"
            android:layout_marginLeft="44dp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:drawableLeft="@mipmap/hightset_def"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="9sp"
            android:autoSizeMaxTextSize="12sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableTop="@mipmap/yk_default"
            android:text="@string/control_status"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:layout_toLeftOf="@id/view1"
            android:layout_centerVertical="true"
            android:layout_marginRight="18dp"
            android:id="@+id/iv_yk_def"
            android:layout_marginTop="5.5dp"
            android:drawablePadding="5dp"
            android:gravity="center_horizontal"
            android:visibility="visible"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="9sp"
            android:autoSizeMaxTextSize="11sp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minWidth="40dp"
            android:text="@string/scram_status"
            android:textSize="11sp"
            android:textColor="@color/white"
            android:drawableTop="@mipmap/jt_default"
            android:layout_toLeftOf="@id/iv_yk_def"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:id="@+id/iv_jt_def"
            android:layout_marginTop="5.5dp"
            android:gravity="center_horizontal"
            android:drawablePadding="5dp"
            android:visibility="visible"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="9sp"
            android:autoSizeMaxTextSize="11sp"
            />
        <View
            android:id="@+id/view1"
            android:layout_width="0dp"
            android:layout_height="31dp"
            android:background="#262728"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="18dp"
            ></View>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#262728"
            android:layout_alignParentBottom="true"
            android:id="@+id/line_view"
            />
    </RelativeLayout>
    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_layout"
        >
        <ddr.example.com.nddrandroidclient.widget.view.DDRViewPager
            android:id="@+id/vp_home_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <LinearLayout
            android:id="@+id/drawer_layout_left"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="#101112"
            android:clickable="true"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tv_shutdown"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/robot_shutdown"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:drawableLeft="@mipmap/iv_shutdown"
                android:drawablePadding="50dp"
                android:layout_marginLeft="16dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="9sp"
                android:autoSizeMaxTextSize="14sp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#262728"
                />
            <TextView
                android:id="@+id/tv_quit"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:drawableLeft="@mipmap/tv_quit"
                android:text="@string/app_quit"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:drawablePadding="50dp"
                android:layout_marginLeft="16dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="9sp"
                android:autoSizeMaxTextSize="14sp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#262728"
                />
        </LinearLayout>
    </androidx.drawerlayout.widget.DrawerLayout>

</RelativeLayout>