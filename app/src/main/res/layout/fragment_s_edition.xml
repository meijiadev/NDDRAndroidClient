<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#101112"
        >
        <!-- android:src="@mipmap/versionlogo"-->
        <ImageView
            android:layout_width="226dp"
            android:layout_height="127dp"
            android:layout_marginTop="196dp"
            android:layout_marginLeft="64dp"
            android:id="@+id/iv_icon_set"
            />
        <!--android:text="大道智创客户端版本"-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/tv_bb"
            android:text="@string/au_app_version"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="442dp"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="9sp"
            android:autoSizeMaxTextSize="16sp"
            />

        <TextView
            android:id="@+id/tv_bb_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="442dp"
            android:layout_marginTop="133dp"
            android:textColor="#ccffffff"
            android:textSize="12sp"
            android:background="@drawable/version"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tvUpdateServer"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_bb_type"
            android:layout_alignBaseline="@id/tv_bb_type"
            android:textColor="#ccffffff"
            android:background="@drawable/version"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="检查更新"
            android:textSize="@dimen/text_size_12sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="@string/au_server_software_version"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:id="@+id/computer_type"
            android:layout_marginTop="190dp"
            android:layout_marginLeft="442dp"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="9sp"
            android:autoSizeMaxTextSize="16sp"
            />
        <RelativeLayout
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="244dp"
            android:layout_marginLeft="442dp"
            android:id="@+id/head_title"
            >

            <TextView
                android:id="@+id/tv_type1"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="@string/au_module"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="9sp"
                android:autoSizeMaxTextSize="16sp"/>

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_version1"
                android:layout_toRightOf="@id/tv_type1"
                android:text="@string/au_version"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="9sp"
                android:autoSizeMaxTextSize="16sp"
                />
            <TextView
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_data1"
                android:layout_toRightOf="@id/tv_version1"
                android:text="@string/au_update_time"
                android:gravity="center|left"
                android:paddingLeft="30dp"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="9sp"
                android:autoSizeMaxTextSize="16sp"
                />
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:id="@+id/computer_type_recycle"
            android:textSize="11sp"
            android:layout_marginTop="268dp"
            android:layout_marginLeft="442dp"
            />

    </RelativeLayout>

</RelativeLayout>
